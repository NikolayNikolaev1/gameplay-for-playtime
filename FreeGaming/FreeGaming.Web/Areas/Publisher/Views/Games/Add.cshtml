@model AddGameFormModel

@{
    ViewData["Title"] = "Add Game";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-md-center">
    <div class="col-md-8">
        <form enctype="multipart/form-data"  asp-action="Add">
            <div class="form-group row">
                <label asp-for="Title" class="control-label col-md-4 text-right"></label>
                <input asp-for="Title" class="form-control col-md-6" />
                <span asp-validation-for="Title" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label col-md-4 text-right"></label>
                <textarea asp-for="Description" class="form-control col-md-6"></textarea>
                <span asp-validation-for="Description" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="control-label col-md-4 text-right"></label>
                <div class="col-6">
                    <div class="row">
                        <div class="col-1 input-group-text">$</div>
                        <input asp-for="Price" type="number" min="0" step="0.01" class="form-control col-md-11" />
                    </div>
                </div>
                <span asp-validation-for="Price" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Size" class="control-label col-md-4 text-right"></label>
                <div class="col-6">
                    <div class="row">
                        <div class="col input-group-text">GB</div>
                        <input asp-for="Size" type="number" min="0" step="0.01" class="form-control col-md-10" />
                    </div>
                </div>
                <span asp-validation-for="Size" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Genre" class="control-label col-md-4 text-right"></label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreType>()" class="form-control col-md-6"></select>
                <span asp-validation-for="Genre" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ReleaseDate" class="control-label col-md-4 text-right"></label>
                <input asp-for="ReleaseDate" class="form-control col-md-6" />
                <span asp-validation-for="ReleaseDate" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Image.FormFile" class="control-label col-md-4 text-right"></label>
                <input asp-for="Image.FormFile" type="file" class="form-control-file col-md-6" />
                <span asp-validation-for="Image" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="TrailerId" class="control-label col-md-4 text-right"></label>
                <div class="input-group-prepend">
                    <div class="input-group-text">youtube.com/watch?v=</div>
                </div>
                <input asp-for="TrailerId" class="form-control col-md-3" />
                <span asp-validation-for="TrailerId" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Developer" class="control-label col-md-4 text-right"></label>
                <input asp-for="Developer" class="form-control col-md-6" />
                <span asp-validation-for="Developer" class="col-md-auto offset-md-4 text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Add" class="btn-lg btn-primary col-md-2 offset-6" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
